<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_13dp"
        android:layout_marginTop="@dimen/dim_40dp"
        android:layout_marginEnd="@dimen/dim_13dp"
        android:layout_marginBottom="@dimen/dim_55dp"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_frag_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim_10dp"
            android:fadeScrollbars="true"
            android:scrollbars="vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="المجموع الكلى"
            android:textColor="@color/colorPurple"
            android:textSize="@dimen/txt_14sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim_5dp"
            app:cardCornerRadius="@dimen/dim_24dp">

            <Button
                android:id="@+id/total_price_btn_frag_cart"
                android:layout_width="@dimen/dim_50dp"
                android:layout_height="@dimen/dim_50dp"
                android:background="@drawable/circle_iv"
                android:backgroundTint="@android:color/white"
                android:text="60 ريال" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_20dp"
            android:layout_marginBottom="@dimen/dim_100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dim_20dp"
                app:cardCornerRadius="@dimen/dim_15dp">

                <Button
                    android:id="@+id/order_confirm_btn_frag_cart"
                    style="@style/SmallButtonStyle3"
                    android:text="تأكيد الطلب" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dim_15dp">

                <Button
                    android:id="@+id/add_items_btn_frag_cart"
                    style="@style/SmallButtonStyle3"
                    android:layout_width="match_parent"
                    android:text="إضافه المزيد" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>