<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_63dp"
    android:layout_marginBottom="@dimen/dim_10dp"
    app:cardCornerRadius="@dimen/dim_15dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dim_15dp"
        android:layout_marginEnd="@dimen/dim_15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_tv_item_recyc_view_review_rest"
            style="@style/TextViewStyle8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name" />

        <TextView
            android:id="@+id/review_tv_item_recyc_view_review_rest"
            style="@style/TextViewStyle8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_emotion_very_satisfied"
            android:drawablePadding="@dimen/dim_10dp"
            android:gravity="start|center_vertical"
            android:paddingStart="@dimen/dim_20dp"
            android:text="الأكل جميل ما شاء تسلم أيديكم و لكم جزيل الشكر على أهتمامكم ونتمنى منكم المحافظه على  هذا المستوى." />

    </LinearLayout>

</androidx.cardview.widget.CardView>