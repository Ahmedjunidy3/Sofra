<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dim_65dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_frag_new_offer_rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/add_offer_image_frag_add_new_offer_rest"
            android:textColor="@color/colorPurple"
            android:textSize="@dimen/txt_14sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            style="@style/SmallImageViewCardViewStyle"
            android:layout_marginTop="@dimen/dim_20dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_frag_new_offer_rest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/ic_image"
                app:riv_corner_radius="@dimen/dim_8dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/SmallEditTextCardViewStyle"
            android:layout_marginTop="@dimen/dim_15dp">

            <EditText
                android:id="@+id/name_et_frag_new_offer_rest"
                style="@style/EditTextStyle5"
                android:hint="أسم العرض"
                android:importantForAutofill="no"
                android:inputType="text" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/BigEditTextCardViewStyle"
            android:layout_marginTop="@dimen/dim_10dp">

            <EditText
                android:id="@+id/descript_et_frag_new_offer_rest"
                style="@style/EditTextStyle6"
                android:hint="وصف مختصر"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:paddingTop="@dimen/dim_8dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/SmallEditTextCardViewStyle"
            android:layout_marginTop="@dimen/dim_10dp">

            <EditText
                android:id="@+id/price_et_frag_new_offer_rest"
                style="@style/EditTextStyle5"
                android:hint="السعر"
                android:importantForAutofill="no"
                android:inputType="text" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/SmallEditTextCardViewStyle"
            android:layout_marginTop="@dimen/dim_10dp">

            <EditText
                android:id="@+id/offer_price_et_frag_new_offer_rest"
                style="@style/EditTextStyle5"
                android:hint="السعر فى العرض"
                android:importantForAutofill="no"
                android:inputType="text" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_20dp"
            android:layout_marginTop="@dimen/dim_10dp"
            android:layout_marginEnd="@dimen/dim_20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                style="@style/SmallEditTextCardViewStyle2"
                android:layout_marginEnd="@dimen/dim_40dp">

                <EditText
                    android:id="@+id/start_date_et_frag_new_offer_rest"
                    style="@style/EditTextStyle7"
                    android:drawableEnd="@drawable/ic_calendar"
                    android:hint="من"
                    android:importantForAutofill="no"
                    android:inputType="date" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView style="@style/SmallEditTextCardViewStyle2">

                <EditText
                    android:id="@+id/end_date_et_frag_new_offer_rest"
                    style="@style/EditTextStyle7"
                    android:drawableEnd="@drawable/ic_calendar"
                    android:hint="إلى"
                    android:importantForAutofill="no"
                    android:inputType="date" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <Button
            android:id="@+id/add_btn_frag_new_offer_rest"
            style="@style/BigButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_30dp"
            android:layout_marginTop="@dimen/dim_20dp"
            android:layout_marginBottom="@dimen/dim_60dp"
            android:text="@string/add" />
    </LinearLayout>

</ScrollView>