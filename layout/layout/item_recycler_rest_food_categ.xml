<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout_rest_food_categ"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dim_20dp"
    android:layout_marginEnd="@dimen/dim_20dp"
    android:layout_marginBottom="@dimen/dim_8dp"
    app:drag_edge="left"
    app:show_mode="pull_out">

    <LinearLayout
        android:layout_width="@dimen/dim_56dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/edit_iv_item_rv_food_categ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_4dp"
            android:layout_marginEnd="@dimen/dim_10dp"
            android:contentDescription="edit iv"
            android:src="@drawable/ic_edit" />

        <ImageView
            android:id="@+id/remove_iv_item_rv_food_categ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="edit iv"
            android:src="@drawable/ic_bin" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_72dp"
            android:layout_marginBottom="@dimen/dim_5dp"
            android:elevation="@dimen/dim_7dp"
            app:cardCornerRadius="@dimen/dim_20dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/food_type_iv_item_rv_food_categ"
                    android:layout_width="@dimen/dim_60dp"
                    android:layout_height="@dimen/dim_50dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dim_13dp"
                    android:layout_marginEnd="@dimen/dim_8dp"
                    android:contentDescription="food categ iv"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="@dimen/dim_20dp" />

                <TextView
                    android:id="@+id/tv_item_rv_food_categ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/food_type_iv_item_rv_food_categ"
                    android:text="@string/rest_food_categ_name"
                    android:textColor="@color/colorPurple"
                    android:textSize="@dimen/txt_16sp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </FrameLayout>

</com.daimajia.swipe.SwipeLayout>


