<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_order_state"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_150dp"
    android:layout_marginBottom="@dimen/dim_15dp"
    app:cardBackgroundColor="@color/colorGray"
    app:cardCornerRadius="@dimen/dim_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_recyc_item_order_rest"
                android:layout_width="@dimen/dim_60dp"
                android:layout_height="@dimen/dim_50dp"
                android:layout_marginStart="@dimen/dim_5dp"
                android:layout_marginTop="@dimen/dim_10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background"
                app:riv_corner_radius="@dimen/dim_10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_5dp"
                android:layout_marginEnd="@dimen/dim_10dp"
                android:layout_toEndOf="@+id/iv_recyc_item_order_rest"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_tv_recyc_item_order_rest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_10dp"
                    android:text="@string/customer_name"
                    android:textColor="@color/colorPurple"
                    android:textSize="@dimen/txt_16sp" />

                <TextView
                    android:id="@+id/order_no_tv_recyc_item_order_rest"
                    style="@style/TextViewStyle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_no" />

                <TextView
                    android:id="@+id/total_price_tv_recyc_item_order_rest"
                    style="@style/TextViewStyle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_price" />

                <TextView
                    android:id="@+id/address_tv_recyc_item_order_rest"
                    style="@style/TextViewStyle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/address" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dim_15dp"
            android:layout_marginEnd="@dimen/dim_15dp"
            android:layout_marginBottom="@dimen/dim_10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/call_btn_recyc_item_order_rest"
                style="@style/SmallButtonStyle5"
                android:backgroundTint="@color/colorPrimary"
                android:drawableStart="@drawable/ic_call"
                android:text="إتصال" />

            <Button
                android:id="@+id/accept_btn_recyc_item_order_rest"
                style="@style/SmallButtonStyle5"
                android:layout_marginStart="@dimen/dim_12dp"
                android:layout_marginEnd="@dimen/dim_12dp"
                android:backgroundTint="@color/colorGreen"
                android:drawableStart="@drawable/ic_accept"
                android:text="قبول" />

            <Button
                android:id="@+id/reject_btn_recyc_item_order_rest"
                style="@style/SmallButtonStyle5"
                android:backgroundTint="@color/colorPurple"
                android:drawableStart="@drawable/ic_cancel"
                android:text="رفض" />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>