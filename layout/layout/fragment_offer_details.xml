<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/dim_15dp"
    android:layout_marginTop="@dimen/dim_65dp"
    android:layout_marginEnd="@dimen/dim_15dp"
    android:orientation="vertical">

    <TextView
        style="@style/TextViewStyle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/offer_details" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_250dp"
        android:layout_marginTop="@dimen/dim_250dp"
        app:cardBackgroundColor="@color/colorGray"
        app:cardCornerRadius="@dimen/dim_25dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_tv_frag_offer_details"
                style="@style/TextViewStyle13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_15dp"
                android:text="@string/offer_name" />

            <TextView
                android:id="@+id/description_tv_frag_offer_details"
                style="@style/TextViewStyle13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_30dp"
                android:text="@string/offer_description" />

            <TextView
                android:id="@+id/date_from_tv_frag_offer_details"
                style="@style/TextViewStyle12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_15dp"
                android:text="@string/offer_start_from_date" />

            <TextView
                android:id="@+id/date_to_tv_frag_offer_details"
                style="@style/TextViewStyle12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_25dp"
                android:text="@string/offer_end_on_date" />

            <Button
                android:id="@+id/get_btn_frag_offer_details"
                style="@style/BigButtonStyle"
                android:layout_marginTop="@dimen/dim_35dp"
                android:layout_marginBottom="@dimen/dim_10dp"
                android:text="@string/get_offer_now" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>