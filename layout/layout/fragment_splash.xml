<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_main"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dim_150dp"
                android:layout_height="@dimen/dim_150dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="start"
                android:layout_marginTop="-37dp"
                android:layout_marginEnd="-37dp"
                android:background="@drawable/iv_main_01"
                android:contentDescription="food dish iv" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="@dimen/dim_150dp"
                android:layout_height="@dimen/dim_150dp"
                android:layout_marginBottom="@dimen/dim_40dp"
                android:background="@drawable/iv_main_03"
                android:contentDescription="logo iv" />

            <Button
                android:id="@+id/btn_buy_frag_main"
                style="@style/BigButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_cornered"
                android:text="@string/request_food_fragment_main" />

            <Button
                android:id="@+id/btn_sell_frag_main"
                style="@style/BigButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_15dp"
                android:background="@drawable/btn_cornered"
                android:text="@string/sell_food_fragment_main" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dim_240dp"
                android:layout_height="@dimen/dim_240dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="-85dp"
                android:layout_marginBottom="-80dp"
                android:background="@drawable/iv_main_02"
                android:contentDescription="food dish iv" />

        </RelativeLayout>

    </LinearLayout>


</ScrollView>