<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_55dp"
    android:layout_marginBottom="@dimen/dim_10dp"
    app:cardCornerRadius="@dimen/dim_20dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/dim_10dp"
        android:paddingEnd="@dimen/dim_10dp">

        <ImageView
            android:id="@+id/notificat_iv_recyc_view_item_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="bell iv"
            android:src="@drawable/ic_notificat_unread" />

        <TextView
            android:id="@+id/title_recyc_view_item_notification"
            android:layout_width="@dimen/dim_150dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dim_5dp"
            android:layout_toEndOf="@+id/notificat_iv_recyc_view_item_notification"
            android:singleLine="true"
            android:text="Attention for your request"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txt_12sp" />

        <ImageView
            android:id="@+id/time_iv_recyc_view_item_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dim_5dp"
            android:layout_toStartOf="@+id/time_tv_recyc_view_item_notification"
            android:contentDescription="bell iv"
            android:src="@drawable/ic_clock" />

        <TextView
            android:id="@+id/time_tv_recyc_view_item_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="10/2/1988"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txt_12sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>