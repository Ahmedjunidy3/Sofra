<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_50dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_rest_profile_edit_s1"
            android:layout_width="@dimen/dim_80dp"
            android:layout_height="@dimen/dim_80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim_10dp"
            android:background="@drawable/iv_main_01" />

        <EditText
            android:id="@+id/name_et_frag_rest_profile_edit_s1"
            style="@style/EditTextStyle3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_40dp"
            android:layout_marginTop="@dimen/dim_10dp"
            android:drawableStart="@drawable/ic_person_purple"
            android:hint="@string/rest_name_frag_reg_s1"
            android:importantForAutofill="no"
            android:inputType="text" />

        <EditText
            android:id="@+id/email_et_frag_rest_profile_edit_s1"
            style="@style/EditTextStyle3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_40dp"
            android:layout_marginTop="@dimen/dim_10dp"
            android:drawableStart="@drawable/ic_email_purple"
            android:hint="@string/rest_email_frag_reg_s1"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/phone_et_frag_rest_profile_edit_s1"
            style="@style/EditTextStyle3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_40dp"
            android:layout_marginTop="@dimen/dim_10dp"
            android:drawableStart="@drawable/ic_phone_purple"
            android:hint="الجوال"
            android:importantForAutofill="no"
            android:inputType="phone" />

        <Spinner
            android:id="@+id/city_spin_frag_rest_profile_edit_s1"
            style="@style/SpinnerStyle2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_40dp"
            android:layout_marginTop="@dimen/dim_10dp"
            android:hint="@string/rest_city_frag_reg_s1"
            android:importantForAutofill="no"
            android:inputType="text" />

        <Spinner
            android:id="@+id/reg_spin_frag_rest_profile_edit_s1"
            style="@style/SpinnerStyle2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_40dp"
            android:layout_marginTop="@dimen/dim_10dp"
            android:drawableStart="@drawable/ic_home_white"
            android:hint="@string/rest_neigh_frag_reg_s1"
            android:importantForAutofill="no"
            android:inputType="text" />

        <EditText
            android:id="@+id/min_charge_et_frag_rest_profile_edit_s1"
            style="@style/EditTextStyle3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_40dp"
            android:layout_marginTop="@dimen/dim_10dp"
            android:drawableStart="@drawable/ic_cash_purple"
            android:hint="الحد الأدنى للطلب"
            android:importantForAutofill="no"
            android:inputType="text" />

        <Button
            android:id="@+id/next_btn_frag_rest_profile_edit_s1"
            style="@style/SmallButtonStyle"
            android:layout_marginTop="@dimen/dim_20dp"
            android:layout_marginBottom="@dimen/dim_120dp"
            android:text="@string/next" />
    </LinearLayout>

</ScrollView>