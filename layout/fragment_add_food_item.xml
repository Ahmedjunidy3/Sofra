<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/add_product_photo_frag_new_food_item"
            android:textColor="@color/colorPurple"
            android:textSize="@dimen/txt_14sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            style="@style/SmallImageViewCardViewStyle"
            android:layout_marginTop="@dimen/dim_20dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/add_iv_frag_new_food_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/ic_image"
                app:riv_corner_radius="@dimen/dim_8dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/SmallEditTextCardViewStyle"
            android:layout_marginTop="@dimen/dim_15dp">

            <EditText
                android:id="@+id/name_et_frag_new_food_item"
                style="@style/EditTextStyle5"
                android:hint="أسم المنتج"
                android:importantForAutofill="no"
                android:inputType="text" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/BigEditTextCardViewStyle"
            android:layout_marginTop="@dimen/dim_10dp">

            <EditText
                android:id="@+id/descript_et_frag_new_food_item"
                style="@style/EditTextStyle6"
                android:hint="وصف مختصر"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:paddingTop="@dimen/dim_8dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/SmallEditTextCardViewStyle"
            android:layout_marginTop="@dimen/dim_10dp">

            <EditText
                android:id="@+id/price_et_frag_new_food_item"
                style="@style/EditTextStyle5"
                android:hint="السعر"
                android:importantForAutofill="no"
                android:inputType="text" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/SmallEditTextCardViewStyle"
            android:layout_marginTop="@dimen/dim_10dp">

            <EditText
                android:id="@+id/price_in_offer_et_frag_new_food_item"
                style="@style/EditTextStyle5"
                android:hint="السعر فى العرض"
                android:importantForAutofill="no"
                android:inputType="text" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/add_btn_frag_new_food_item"
            style="@style/BigButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_30dp"
            android:layout_marginTop="@dimen/dim_40dp"
            android:layout_marginBottom="@dimen/dim_60dp"
            android:text="@string/add" />
    </LinearLayout>

</ScrollView>