<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_50dp"
        android:layout_marginBottom="@dimen/album_dp_45"
        android:background="@drawable/background_about_us"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim_10dp"
            android:text="@string/about_us_frag_about_app"
            android:textColor="@color/colorPurple"
            android:textSize="@dimen/txt_18sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_150dp"
            android:layout_marginStart="@dimen/dim_25dp"
            android:layout_marginTop="@dimen/dim_15dp"
            android:layout_marginEnd="@dimen/dim_25dp"
            app:cardBackgroundColor="@color/colorGray"
            app:cardCornerRadius="@dimen/dim_5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_100dp"
                android:layout_marginStart="@dimen/dim_16dp"
                android:layout_marginTop="@dimen/dim_16dp"
                android:layout_marginEnd="@dimen/dim_16dp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>