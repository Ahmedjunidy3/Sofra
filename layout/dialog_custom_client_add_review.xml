<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_300dp"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/dim_20dp"
    android:layout_marginEnd="@dimen/dim_20dp"
    app:cardCornerRadius="@dimen/dim_30dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGray"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            style="@style/TextViewStyle11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_10dp"
            android:text="أختار تقييمك" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_15dp"
            android:layout_marginTop="@dimen/dim_15dp"
            android:layout_marginEnd="@dimen/dim_10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/very_satisf_iv_dialog_client_add_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dim_10dp"
                android:contentDescription="very satisfied emotion iv"
                android:src="@drawable/ic_emotion_very_satisfied" />

            <ImageView
                android:id="@+id/satisf_iv_dialog_client_add_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dim_10dp"
                android:contentDescription="satisfied emotion iv"
                android:src="@drawable/ic_emotion_satisfied" />

            <ImageView
                android:id="@+id/neutral_iv_dialog_client_add_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dim_10dp"
                android:contentDescription="neutral emotion iv"
                android:src="@drawable/ic_emotion_neutral" />

            <ImageView
                android:id="@+id/dissatisf_iv_dialog_client_add_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dim_10dp"
                android:contentDescription="dissatisfied emotion iv"
                android:src="@drawable/ic_emotion_dissatisfied" />

            <ImageView
                android:id="@+id/very_dissatisf_iv_dialog_client_add_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dim_10dp"
                android:contentDescription="very dissatisfied emotion iv"
                android:src="@drawable/ic_emotion_very_dissatisfied" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_100dp"
            android:layout_marginStart="@dimen/dim_25dp"
            android:layout_marginTop="@dimen/dim_30dp"
            android:layout_marginEnd="@dimen/dim_25dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="@dimen/dim_10dp">

            <EditText
                android:id="@+id/review_et_dialog_client_add_review"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_cornered"
                android:gravity="start|top"
                android:hint="أضف تعليقك هنا"
                android:importantForAutofill="no"
                android:inputType="text"
                android:paddingStart="@dimen/dim_10dp"
                android:paddingTop="@dimen/dim_10dp"
                android:paddingEnd="@dimen/dim_10dp" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/add_btn_dialog_client_add_review"
            style="@style/SmallButtonStyle"
            android:layout_marginTop="@dimen/dim_20dp"
            android:layout_marginBottom="@dimen/dim_20dp"
            android:text="@string/add" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
